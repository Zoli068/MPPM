<UserControl x:Class="MVVM.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"  BorderBrush="Black" Background="Beige" BorderThickness="2" Padding="10 0 10 4" Margin="1" CornerRadius="4" >
            <TextBlock Text="GDA Client" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">
            Please select a CIM/XML file to insert into the NMS:
        </TextBlock>

        <Button Grid.Row="5" Grid.ColumnSpan="2" MaxWidth="200" Content="Select File" FontSize="20" Margin="10"  Command="{Binding SelectFileCommand}"  BorderThickness="2"/>


        <TextBlock  Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"  HorizontalAlignment="Center" Visibility="{Binding SelectedFileVisibility}" VerticalAlignment="Center" FontSize="20" >
           Selected File:
        </TextBlock>

        <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"  BorderBrush="Black" Background="Beige" BorderThickness="2"  Margin="20" CornerRadius="4" Visibility="{Binding SelectedFileVisibility}" >
            <TextBlock Text="{Binding SelectedFile}" FontSize="25" Margin="10 0 10 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Button Grid.Row="8" Grid.ColumnSpan="2" MaxWidth="200" Content="Apply Insert Delta" FontSize="20" Margin="10"  Command="{Binding ApplyInsertDelta}"  BorderThickness="2" Visibility="{Binding SelectedFileVisibility}" />

    </Grid>
</UserControl>
