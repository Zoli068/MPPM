<UserControl x:Class="MVVM.Views.GetValuesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            
        <StackPanel Grid.Row="0" Margin="0 5 0 0">
            <TextBlock HorizontalAlignment="Center" FontSize="25">Select the DMS type</TextBlock>
            <ComboBox  Margin="0 15 0 0"   HorizontalAlignment="Center" FontSize="20" ItemsSource="{Binding DMSTypes}" SelectedItem="{Binding SelectedDMSType}"></ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="25 0 25 0">
            <TextBlock HorizontalAlignment="Center" Margin="0 0 0 5"  FontSize="25">Select the attrbiutes</TextBlock>
            <ListBox  VerticalAlignment="Stretch" MinHeight="100" MaxHeight="100" ItemsSource="{Binding Attributes}" SelectedItem="{Binding SelectedAttributeToAdd}" ScrollViewer.CanContentScroll="True"  ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="25 0 25 0">
            <TextBlock HorizontalAlignment="Center" Margin="0 0 0 0"  FontSize="25">Selected attrbiutes</TextBlock>
            <ListBox VerticalAlignment="Stretch" MinHeight="100" MaxHeight="100" SelectionMode="Single"  ItemsSource="{Binding SelectedAttributes}" SelectedItem="{Binding SelectedAttributeToRemove}" ScrollViewer.CanContentScroll="True"  ScrollViewer.HorizontalScrollBarVisibility="Auto" />
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0 0 0 0">
            <TextBlock HorizontalAlignment="Center" Margin="0 10 0 10" FontSize="25">Enter the GID</TextBlock>
            <TextBox  Margin="25 0 25 0" TextAlignment="Center" Text="{Binding GIDValue}"   HorizontalAlignment="Stretch" FontSize="20" ></TextBox>
        </StackPanel>

        <Button Grid.Row="4" Margin="25 5 25 5" FontSize="25" Command="{Binding GetValuesCommand}" >Get Values</Button>
    </Grid>
</UserControl>
